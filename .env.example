# HARCA環境変数設定ファイル
# 実際に使用する場合は、このファイルを.envにコピーして使用してください

# Redis接続設定
REDIS_URL=redis://localhost:6379

# PostgreSQL接続設定
DB_HOST=localhost
DB_PORT=5700
DB_USER=harca
DB_PASSWORD=harca_password
DB_NAME=harca_db
DB_SSL=false
POSTGRES_CONNECTION_STRING=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Supabase接続設定（移行用）
SUPABASE_HOST=db.ctoeobczdztvhobydzan.supabase.co
SUPABASE_PORT=5432
SUPABASE_USER=postgres
SUPABASE_PASSWORD=CGR256ORmrUgfEXl
SUPABASE_DB=postgres

# キャッシュ基本設定
CACHE_TTL=3600
CACHE_PREFIX=harca:embedding:

# メモリキャッシュ設定
ENABLE_MEMORY_CACHE=true
MEMORY_CACHE_MAX_ITEMS=1000

# Redisキャッシュ設定
ENABLE_REDIS_CACHE=true

# ファイルキャッシュ設定
ENABLE_FILE_CACHE=true
FILE_CACHE_DIR=./harca-mcp/plugins/vector-store/.cache/embeddings

# 圧縮設定
ENABLE_CACHE_COMPRESSION=true
CACHE_COMPRESSION_LEVEL=6
CACHE_COMPRESSION_THRESHOLD=100

# ポート設定（すべて3700番台を使用）
CACHE_DASHBOARD_PORT=3700
VECTOR_STORE_API_PORT=3701
ADMIN_CONSOLE_PORT=3702
DEBUG_SERVER_PORT=3703
TEST_SERVER_PORT=3704
MONITORING_SERVICE_PORT=3705
DOC_SERVICE_PORT=3706
DEV_SERVER_PORT=3707

# ダッシュボード設定
CACHE_DASHBOARD_UPDATE_INTERVAL=60000  # 1分ごとに更新

# HARCA環境変数設定ファイル
# 実際に使用する場合は、このファイルを.envにコピーして使用してください

# Redis接続設定
HARCA_REDIS_URL=redis://localhost:6379

# PostgreSQL接続設定
HARCA_DB_HOST=localhost
HARCA_DB_PORT=3730
HARCA_DB_USER=harca
HARCA_DB_PASSWORD=harca_password
HARCA_DB_NAME=harca_db
HARCA_DB_SSL=false
HARCA_POSTGRES_CONNECTION_STRING=postgres://${HARCA_DB_USER}:${HARCA_DB_PASSWORD}@${HARCA_DB_HOST}:${HARCA_DB_PORT}/${HARCA_DB_NAME}
# Docker環境用接続文字列（Docker Composeで使用）
POSTGRES_CONNECTION_STRING=postgres://${HARCA_DB_USER}:${HARCA_DB_PASSWORD}@postgres:3730/${HARCA_DB_NAME}
# Supabase互換接続文字列（後方互換性のため）
SUPABASE_CONNECTION_STRING=${HARCA_POSTGRES_CONNECTION_STRING}

# OpenAI API設定
HARCA_OPENAI_API_KEY=your_openai_api_key_here
HARCA_OPENAI_MODEL=gpt-4-turbo
HARCA_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# キャッシュ基本設定
HARCA_CACHE_TTL=3600
HARCA_CACHE_PREFIX=harca:embedding:

# メモリキャッシュ設定
HARCA_ENABLE_MEMORY_CACHE=true
HARCA_MEMORY_CACHE_MAX_ITEMS=1000

# Redisキャッシュ設定
HARCA_ENABLE_REDIS_CACHE=true

# ファイルキャッシュ設定
HARCA_ENABLE_FILE_CACHE=true
HARCA_FILE_CACHE_DIR=./harca-mcp/plugins/vector-store/.cache/embeddings

# 圧縮設定
HARCA_ENABLE_CACHE_COMPRESSION=true
HARCA_CACHE_COMPRESSION_LEVEL=6
HARCA_CACHE_COMPRESSION_THRESHOLD=100

# ポート設定（すべて3700番台を使用）
HARCA_CACHE_DASHBOARD_PORT=3700
HARCA_VECTOR_STORE_API_PORT=3701
HARCA_ADMIN_CONSOLE_PORT=3702
HARCA_DEBUG_SERVER_PORT=3703
HARCA_TEST_SERVER_PORT=3704
HARCA_MONITORING_SERVICE_PORT=3705
HARCA_DOC_SERVICE_PORT=3706
HARCA_DEV_SERVER_PORT=3707

# ダッシュボード設定
HARCA_DASHBOARD_UPDATE_INTERVAL=60000  # 1分ごとに更新
